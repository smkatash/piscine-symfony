{% extends 'base.html.twig' %}

{% block content %}
    <h1>{{ post.title }}</h1>
    <p><strong>Author:</strong> {{ post.author }}</p>
    <p><strong>Created at:</strong> {{ post.createdAt|date('Y-m-d H:i:s') }}</p>
    {% if post.createdAt|date('Y-m-d H:i:s') != post.updatedAt|date('Y-m-d H:i:s') %}
        <p><strong>Updated at:</strong> {{ post.updatedAt|date('Y-m-d H:i:s') }}</p>
    {% else %}
        <p><strong>Updated at:</strong> Not updated</p>
    {% endif %}
    <p><strong>Last edited by:</strong> {{ post.editor }}</p>
    <p>{{ post.content }}</p>

    <div style="margin-top: 20px; text-align: center;">
        <form action="{{ path('app_post_like', { id: post.id }) }}" method="post" style="display: inline;">
            <button type="submit">👍 Like</button>
        </form>
        <form action="{{ path('app_post_dislike', { id: post.id }) }}" method="post" style="display: inline;">
            <button type="submit">👎 Dislike</button>
        </form>
    </div>

     <div style="text-align: center; margin-top: 20px;">
        <form action="{{ path('app_post_edit', { id: post.id }) }}" method="post" style="display: inline;">
            <button type="submit">Edit post</button>
        </form>
    </div>
     <div style="text-align: center; margin-top: 20px;">
        <a href="{{ path('app_posts') }}">
            <button type="button">Go to all posts</button>
        </a>
    </div>
{% endblock %}